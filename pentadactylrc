"1.2pre-pm-3

loadplugins '\.(js|penta)$'
group user

" Map x to close tab then switch to previous tab
map -description='Map x to close tab' -modes=n,v x :quit<CR><C-^>

" Map X to undo a close tab
map -count -description='Map X to undo close tab' -modes=n,v X -ex <count>:undo

" D does nothing
nmap -builtin D <nop>

" U does nothing
nmap -builtin U <nop>

set cdpath=''
set defsearch=duckduckgo
set guioptions=bCrsT
set hintkeys=sadfjklewcmpgh
set scrolltime=20

" vim: set ft=pentadactyl:
